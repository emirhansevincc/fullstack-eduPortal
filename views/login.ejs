    <%- include('partials/_header.ejs') %> 
    <%- include('partials/_navigation.ejs') %> 

    <div class="main-container">
        <div class="container">
            <div class="top-of-form">
                <h2>LOGIN</h2>
            </div>

            <div class="course-created">
                <% if(flashMessages){ %> 
                    <% if(flashMessages.success){ %> 
                        <div style="margin: 0 15px 20px 15px;width: 400px;" class="alert-success">
                            <p>
                                <%= flashMessages.success %> 
                            </p>
                        </div>
                    <% } else if(flashMessages.error){ %> 
                        <div style="margin: 0 15px 20px 15px;width: 400px;" class="alert-error">
                            <p>
                                <%= flashMessages.error %> 
                            </p>
                        </div>
                    <% } %> 
                <% } %>
            </div>
        
            <form class="contact" method="POST" action="users/login">
                <input type="email" name="email" class="name form-common" placeholder="Your Email">
                <input type="password" name="password" class="email form-common" placeholder="Your Password">
                <div class="button-div">
                    <button type="submit" class="contact-btn">Login</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %> 
    
</body>
</html>